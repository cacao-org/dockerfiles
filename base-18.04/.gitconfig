[color]
	diff = auto
	status = auto
	branch = auto
[user]
	name = Arnaud Sevin
	email = Arnaud.Sevin@obspm.fr
[alias]
	ci = commit
	co = checkout
	st = status
	br = branch
	lg = log --oneline --graph --all
	last = log -1 HEAD
	laststat = "!f() { git diff --stat $1@{1}..$1 --dirstat=cumulative,files; }; f"
[credential]
	helper = cache --timeout=36000
[branch]
	autosetuprebase = always
[diff]
	submodule = log
[status]
	submodulesummary = 1
[gc]
	autoDetach = false
[rebase]
	autosquash = true
	autoStash = true
[pull]
	rebase = true
